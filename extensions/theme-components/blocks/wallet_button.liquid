<link
  id="frak-button-wallet"
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/@frak-labs/components@latest/cdn/components.css"
>

{% assign use_reward = '' %}
{% if block.settings.show_reward == true %}
  {% assign use_reward = 'use-reward' %}
{% endif %}

<frak-button-wallet {{ use_reward }}></frak-button-wallet>

{% schema %}
{
  "name": "Frak Wallet Button",
  "target": "body",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_reward",
      "label": "Show reward",
      "default": false
    }
  ]
}
{% endschema %}
